<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerMapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/account"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/cardclr"
        android:src="@mipmap/account_icon" />
    <Button
        android:id="@+id/gpson"
        android:layout_marginBottom="60dp"
        android:background="@drawable/custom_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom"
        android:fontFamily="serif"
        android:text="REQUEST"
        android:textColor="@color/whiteBack"
        android:textStyle="bold" />
    <Button
        android:id="@+id/getmech"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="110dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:fontFamily="serif" />
    <Button
        android:id="@+id/goonline"
        android:visibility="gone"
        android:layout_marginBottom="60dp"
        android:background="@drawable/custom_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom"
        android:fontFamily="serif"
        android:text="REQUEST"
        android:textColor="@color/whiteBack"
        android:textStyle="bold" />
    <Button
        android:id="@+id/Completed"
        android:visibility="gone"
        android:layout_marginBottom="60dp"
        android:background="@drawable/custom_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom"
        android:fontFamily="serif"
        android:text="COMPLETED"
        android:textColor="@color/whiteBack"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/dummy_info"
        android:visibility="gone"
        android:layout_gravity="top"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cust_info"
        android:background="@color/info"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_gravity="top"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:id="@+id/p_image"
                android:layout_width="70sp"
                android:layout_height="70sp"
                map:civ_border_color="@color/whiteBack"
                map:civ_border_width="2dp"
                android:src="@mipmap/account_icon"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/colorBackButton"
                android:fontFamily="serif"
                android:text="..............."/>
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/call"
                        android:layout_gravity="center"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/fab_margin"
                        android:src="@mipmap/call_icon2"
                        map:backgroundTint="@color/call" />
                </LinearLayout>
                <RatingBar
                    android:id="@+id/ratingView"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:focusable="false"
                    android:stepSize="0.1" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Id: "
                android:textColor="@color/colorBackButton"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/S_id"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".............."
                android:fontFamily="serif"
                android:textColor="@color/colorBackButton"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile no: "
                android:textColor="@color/colorBackButton"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/m_num"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".............."
                android:fontFamily="serif"
                android:textColor="@color/colorBackButton"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:visibility="gone"
        android:layout_marginTop="250dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">
        <TextView
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_marginTop="3dp"
            android:text="Please rate Mechanic.."
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:textColor="@color/colorBackButton"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:id="@+id/r_image"
                android:layout_width="60sp"
                android:layout_height="60sp"
                map:civ_border_color="@color/whiteBack"
                map:civ_border_width="2dp"
                android:src="@mipmap/account_icon"/>
            <TextView
                android:id="@+id/r_name"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/colorBackButton"
                android:fontFamily="serif"
                android:text="..............."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:numStars="5"
                android:stepSize="1" />

            <Button
                android:id="@+id/rate"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:background="@drawable/custom_btn2"
                android:text="DONE"
                android:textColor="@color/whiteBack"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>