<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBack"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="316dp"
        android:layout_height="325dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:src="@mipmap/mechanic_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="VEHICLE SERVICE"
        android:textColor="@color/colorBackButton"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:fontFamily="serif"
        android:text="@string/welcome"
        android:textColor="@color/colorBackButton"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signin"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@color/sigbut"
        android:fontFamily="serif"
        android:text="SIGN IN"
        android:textColor="@color/whiteBack"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/signin"
        android:layout_marginEnd="16dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/custom_btn"
        android:fontFamily="serif"
        android:text="REGISTER"
        android:textColor="@color/sigbut"
        android:textSize="22sp" />

</RelativeLayout>