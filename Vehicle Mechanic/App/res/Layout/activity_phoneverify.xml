<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".phoneverify">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backtreg1"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:src="@mipmap/back_btn_blk"
        app:backgroundTint="@color/whiteBack" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Enter the OTP sent"
                android:textSize="26dp"
                android:textColor="@color/colorBackButton" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="to you at "
                        android:fontFamily="serif"
                        android:textColor="@color/colorBackButton"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/phnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="serif"
                        android:text="+91 8951539357"
                        android:textStyle="bold"
                        android:textColor="@color/colorBackButton"
                        android:textSize="26dp" />

            </LinearLayout>

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/msg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Did you enter the correct mobile number?"
                    android:textColor="#f7a00a"
                    android:textSize="24dp"/>
            <EditText
                android:id="@+id/edtOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:hint="Enter OTP here"
                android:textColor="@color/colorBackButton"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/errmsg"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Please enter your verification code"
                android:textColor="#f56d6b"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Resend code in"
                    android:textColor="@color/colorBackButton"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/timeclk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="serif"
                    android:text="00:15"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Edit my mobile number"
                    android:textColor="#3F51B5"
                    android:textSize="18dp"  />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatverfrntbtn"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/frnt_btn_arrow"
                    app:backgroundTint="@color/colorPrimary" />

            </LinearLayout>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressbar"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="58dp"
                android:layout_height="58dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


